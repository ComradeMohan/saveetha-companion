
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if the user is an admin
    function isAdmin() {
      return request.auth.token.email == 'madiremohanreddy0400.sse@saveetha.com' && request.auth.token.email_verified;
    }

    // Users can create their own profile and can only read/update their own document.
    match /users/{userId} {
      allow create: if request.auth != null;
      allow read, update: if request.auth.uid == userId;
    }

    // Only admins can manage the faculty directory.
    match /faculty/{document=**} {
      allow read, write: if isAdmin();
    }

    // Only admins can manage concept maps.
    match /concept-maps/{document=**} {
      allow read, write: if isAdmin();
    }
    
    // Authenticated users can create/update their own CGPA document.
    match /students_cgpa/{userId} {
      allow read, write: if request.auth.uid == userId;
    }
  }
}
