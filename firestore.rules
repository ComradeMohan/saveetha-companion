rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is admin.
    function isAdmin() {
      return request.auth != null &&
             request.auth.token.email_verified == true &&
             request.auth.token.email == 'madiremohanreddy0400.sse@saveetha.com';
    }

    // Give admin full access if they are verified.
    match /{document=**} {
      allow read, write: if isAdmin();
    }

    // Allow anyone to read public data.
    match /faculty/{docId} {
      allow read: if true;
    }
    match /concept-maps/{docId} {
      allow read: if true;
    }
     match /updates/{docId} {
      allow read: if true;
    }
    match /events/{docId} {
      allow read: if true;
    }

    // Allow authenticated users to manage their own data.
    match /users/{userId} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
    }
    match /students_cgpa/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow anyone to submit forms (contact, issues, suggestions).
     match /contact-messages/{messageId} {
      allow create: if true;
    }
    match /login-issues/{issueId} {
      allow create: if true;
    }
    match /faculty-requests/{requestId} {
      allow create: if request.auth != null;
    }
  }
}
